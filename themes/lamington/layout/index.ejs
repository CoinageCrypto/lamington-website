<!-- ***** Blog Area Start ***** -->
<section class="uza-blog-area">
    <!-- Background Curve -->
    <div class="blog-bg-curve">
        <img src="/img/core-img/curve-4.png" alt="" />
    </div>

    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading text-center">
                    <h2>Getting Started Guides</h2>
                    <p>Get started with Lamington the easy way.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <% for (const post of site.posts.toArray().slice(0, 3)) { %>
            <div class="col-12 col-lg-4">
                <div class="single-blog-post bg-img mb-80" style="background-image: url(<%= post.featured_image %>);">
                    <!-- Post Content -->
                    <div class="post-content">
                        <a href="<%= post.path %>" class="post-title"><%= post.title %></a>
                        <p><%= post.excerpt %></p>
                        <a href="<%= post.path %>" class="read-more-btn">
                            Read More <i class="arrow_carrot-2right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>
<!-- ***** Blog Area End ***** -->